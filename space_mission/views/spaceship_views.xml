<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="open_missions" model="ir.actions.act_window">
            <field name="name">Missions</field>
            <field name="res_model">space.mission</field>
            <field name="domain">[('spaceship_id','=',active_id)]</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <record id="spaceship_form" model="ir.ui.view">
            <field name="name">spaceship.form</field>
            <field name="model">space.spaceship</field>
            <field name="arch" type="xml">
                <form string ='Spaceship Form'>
                    <header>
                        <button name="print_spaceship" string="Print Spaceship" type="object" icon="fa-anchor"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="open_missions" type="object" icon="fa-globe icon">
                                <field name="mission_count" string="Mission_text"/>
                            </button>
                            <button name="%(open_missions)d" type="action" class="oe_stat_button" icon="fa-archive icon">
                                <field name="mission_count" string="Missions" widget="statinfo"/>
                            </button>
                        </div>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="length"/>
                                <field name="width"/>
                            </group>
                            <group>
                                <field name="ship_type"/>
                                <field name="number_of_passengers"/>
                                <field name="engines"/>
                                <field name="fuel_type"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string='Ship Image'>
                                <field name="ship_image" widget="image"/>
                            </page>
                            <page string='Missions'>
                                <field name="mission_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="captain"/>
                                        <field name="duration"/>
                                    </tree>
                                </field>
                            </page>
                            <page string='Video'>
                                <field name="video_url"/>
                                <field name="embed_code" class="mt-2" widget="video_preview"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="spaceship_search" model="ir.ui.view">
            <field name="name">spaceship.search</field>
            <field name="model">space.spaceship</field>
            <field name="arch" type="xml">
                <search string="Spaceships">
                    <field name="name"/>
                    <field name="ship_type"/>
                    <field name="mission_ids"/>
                    <separator/>
                    <group expand="1" string="Group by">
                        <filter string="Ship Type" name="ship_type" context="{'group_by':'ship_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="spaceship_tree" model="ir.ui.view">
            <field name="name">spaceship.list</field>
            <field name="model">space.spaceship</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ship_type"/>
                    <field name="number_of_passengers" optional="show"/>
                    <field name="mission_count"/>
                    <field name="engines" optional="hide"/>
                    <field name="fuel_type" optional="hide"/>
                </tree>
            </field>
        </record>
    
    </data>
</odoo>